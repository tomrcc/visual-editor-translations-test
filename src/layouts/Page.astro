---
import PageHelper from "../shared/astro/page.astro";
import Layout, { type SEOProps } from "./Layout.astro";

type Props = {
  frontmatter: {
    title: string;
    content_blocks?: any[];
    selected_visual_editor_translation?: string;
    page_size?: number;
    seo?: SEOProps;
  };
};

const props = Astro.props.frontmatter;
---

<Layout {...props}>
  <PageHelper
    bookshop:live
    contentBlocks={props.content_blocks ?? []}
    selectedVisualEditorTranslation={props.selected_visual_editor_translation ??
      "None"}
  />
</Layout>
